    <p><%= link_to "Delete #{@e_scooter.name}",
                  e_scooter_path(@e_scooter),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-secondary mt-3" %></p>
  <% end %></p>
  <p><% if user_signed_in? && current_user.owner == false %>
    <p><%= link_to "Book this e_scooters", new_e_scooter_booking_path(@e_scooter), class: "btn btn-secondary mt-3" %></p>
  <% end %></p>
  <p><%= link_to "Back to e_scooters list", e_scooters_path, class: "btn btn-secondary mt-3 mb-3" %></p>
</div>
