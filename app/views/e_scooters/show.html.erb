  <div class="container">
    <h1>Your E-scooter</h1>
  </div>
</div>

<div class="container mt-3">
  <div>
    <h2><%= @e_scooter.name %></h2>
    <p><%= @e_scooter.description %></p>
    <p><%= @e_scooter.price %>â‚¬/jour</p>
    <p><%= @e_scooter.street_name %></p>
    <p><%= @e_scooter.disponibility_start %></p>
    <p><%= @e_scooter.disponibility_end %></p>
  </div>
  <p><% if user_signed_in? && current_user.owner == true %>
