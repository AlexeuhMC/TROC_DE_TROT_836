<div class="banners" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1566936737687-8f392a237b8b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">
  <div class="container">
    <h1>Your booking</h1>
  </div>
</div>

<div class="container mt-3">
  <div class="card-product" class="d-flex justify-content-center">
    <div class="d-flex">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width:140px" alt="Card image cap">
    <div class="card-infos " >
      <h2><%= @booking.e_scooter.name %></h2>
      <h3><%= @booking.check_in_date %></h3>
      <h3><%= @booking.check_out_date %></h3>
    </div>
    </div>
  </div>
  <div>
    <p><%= link_to "See all your bookings", bookings_path, class: "btn btn-secondary mt-3" %></p>
    <p><%= link_to "Back to e_scooters list", e_scooters_path, class: "btn btn-secondary mt-3" %></p>
    <p><%= link_to "Delete this booking",
                booking_path(@booking),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-secondary mt-3" %></p>
  </div>
