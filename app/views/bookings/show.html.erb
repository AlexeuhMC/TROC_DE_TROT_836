<div class="banners" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1566936737687-8f392a237b8b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">
  <div class="container">
    <h1>Your booking</h1>
  </div>
</div>

<div class="container mt-3">
  <div class="card-product" class="d-flex justify-content-center">
    <div class="d-flex">
      <%= cl_image_tag @booking.e_scooter.photo.key,  height: 400, width: 355, crop: :fill %>
    <div class="card-infos " >
      <h2><%= @booking.e_scooter.name %></h2>
      <h3>Réservation</h3>
      <h4>from : <%= @booking.check_in_date %></h4>
      <h4>to : <%= @booking.check_out_date %></h4>
      <% start_time =  @booking.check_in_date %>
      <% end_time   =  @booking.check_out_date%>
      <p><%= distance_of_time_in_words(start_time, end_time)%> at <%= @booking.e_scooter.price %>€/day </p>
      <p>Total of <strong><%= (end_time - start_time).to_i * @booking.e_scooter.price%>€</strong> </p>
    </div>
    </div>
  </div>
  <div class="d-flex justify-content-around">
    <div>
      <p><%= link_to "See all your bookings", bookings_path, class: "btn btn-secondary mt-3" %></p>
      <p><%= link_to "Back to e_scooters list", e_scooters_path, class: "btn btn-secondary mt-3" %></p>
      <p><%= link_to "Delete this booking",
                  booking_path(@booking),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-secondary mt-3" %></p>
    </div>
    <img class="gif" src="https://c.tenor.com/zRfxxnlRTK0AAAAC/thats-how-i-roll-chihuahua.gif" alt="Card image cap">
  </div>
</div>
